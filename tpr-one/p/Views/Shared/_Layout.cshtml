<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/app/content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/app/content/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/app/content/component.css" rel="stylesheet" />
    <link href="~/app/content/normalize.css" rel="stylesheet" />
    <link href="~/app/content/icons.css" rel="stylesheet" />
    <link href="~/app/content/app.css" rel="stylesheet" />
    <script src="~/app/lib/jquery-3.1.1.js"></script>
    @*<script src="~/app/lib/angular.min.js"></script>*@
    @*<script src="~/app/lib/lib/Angular.js"></script>*@
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-mocks.js"></script>
    <script src="~/Scripts/route.js"></script>
    <script src="~/Scripts/routeParams.js"></script>
    <script src="~/app/lib/lib/loader.js"></script>
    @*<script src="~/app/lib/lib/AngularB.js"></script>*@
    <script src="~/app/content/bootstrap/js/bootstrap.js"></script>
    <script src="~/app/classes/markovski.js"></script>
    <script src="~/app/lib/math.js"></script>
    <script src="~/app/lib/vis-network.min.js"></script>
    <script src="~/app/lib/vis.min.js"></script>
    <link href="~/app/lib/vis-network.min.css" rel="stylesheet" />
    <link href="~/app/content/pushy.css" rel="stylesheet" />    
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @*<script src="~/Scripts/ng/compile.js"></script>*@
    @RenderSection("scripts");
</head>
<body>
    <div>
        <nav class="pushy pushy-left" ng-controller="mainA">
            <ul>
                <li class="@(ViewBag.Link == 0 ? "selected" : null) menuItem"><a href="/M/">Марковские процессы</a></li>
                <li class="@(ViewBag.Link == 1 ? "selected" : null) menuItem"><a href="/LVM/">Логико-вероятностный метод</a></li>
                <li class="@(ViewBag.Link == 2 ? "selected" : null) menuItem"><a href="/DP/">Дерево решений</a></li>
                <li class="menuItem"><a ng-click="savemodal()">Сохранение/Загрузка</a></li>
                <li class="menuItem"><a href="https://github.com/yadanilov19/tpr">GitHub</a></li>
            </ul>
        </nav>
        <div class="navbar navbar-default navbar-fixed-top head">
            <button class="menu-btn">&#9776;</button>
            <div id="menu">
                @RenderSection("Menu")
            </div>
        </div>

        <div>
            <div id="container">
                <div id="rightContent">
                    <div>
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - powered by danilov.sergey.mo04@gmail.com</p>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/pushy.min.js"></script>

    <div class="modal fade" id="savemodal" tabindex="-1" role="dialog" aria-labelledby="savemodal" ng-controller="mainA">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Сохранение/Загрузка</h3>
                </div>
                <div class="modal-body">
                    @*<span class="btn btn-default btn-file">
                        Browse <input type="file">
                    </span>*@
                    <div class="input-group">
                        <label class="input-group-btn">
                            <span class="btn btn-default">
                                Обзор… <input type="file" id="inputUpload" name="file" style="display: none;">
                            </span>
                        </label>
                        <input type="text" class="form-control" readonly="">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button" ng-click="upload()">Загрузить!</button>
                        </span>
                    </div>
                    <br>
                    <hr>
                    <br>
                    <button type="button" class="btn btn-primary" ng-click="saveData()">Сохранить</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
    <a id="downloadAnchorElem"></a>
</body>
</html>
